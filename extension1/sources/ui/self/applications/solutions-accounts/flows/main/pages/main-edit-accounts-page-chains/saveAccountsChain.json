{
  "variables": {
    "saveFailureResult": {
      "type": "page:genericServiceErrorResponseType"
    },
    "errorMessage": {
      "type": "string"
    },
    "saveHeaders": {
      "type": "object"
    }
  },
  "root": "markSaveStarted",
  "actions": {
    "markSaveStarted": {
      "module": "vb/action/builtin/assignVariablesAction",
      "parameters": {
        "$page.variables.saveAccountsChainInProgress": {
          "source": true
        }
      },
      "outcomes": {
        "success": "validateAccounts"
      },
      "description": "Sets the progress variable to true",
      "label": "Mark Save in progress"
    },
    "validateAccounts": {
      "module": "vb/action/builtin/callChainAction",
      "parameters": {
        "id": "flow:validateFormChain",
        "params": {
          "validationGroupId": "validation-group"
        }
      },
      "outcomes": {
        "success": "isFormValid"
      },
      "label": "Validate",
      "description": "Validates accounts form"
    },
    "isFormValid": {
      "module": "vb/action/builtin/ifAction",
      "parameters": {
        "condition": "[[ $chain.results.validateAccounts === true ]]"
      },
      "outcomes": {
        "true": "checkETag",
        "false": "markSaveEnded"
      },
      "label": "Is Form valid",
      "description": "Tests if form passed validation"
    },
    "checkETag": {
      "module": "vb/action/builtin/ifAction",
      "parameters": {
        "condition": "[[ $page.variables.accountsETag ]]"
      },
      "outcomes": {
        "true": "assignIfMatchHeader",
        "false": "saveAccounts"
      }
    },
    "assignIfMatchHeader": {
      "module": "vb/action/builtin/assignVariablesAction",
      "parameters": {
        "$variables.saveHeaders": {
          "source": "[[ { 'If-Match': $page.variables.accountsETag } ]]"
        }
      },
      "outcomes": {
        "success": "saveAccounts"
      }
    },
    "saveAccounts": {
      "module": "vb/action/builtin/restAction",
      "parameters": {
        "endpoint": "site_SolutionsAccounts:crmRest/update_accounts",
        "body": "{{ $page.variables.accounts }}",
        "requestType": "json",
        "uriParams": {
          "accounts_Id": "[[ $page.variables.accountsId ]]"
        },
        "headers": "[[ $variables.saveHeaders ]]"
      },
      "outcomes": {
        "success": "assignPayload",
        "failure": "assignFailureResult"
      }
    },
    "assignPayload": {
      "module": "vb/action/builtin/assignVariablesAction",
      "parameters": {
        "$page.variables.accounts": {
          "source": "{{ $chain.results.saveAccounts.body }}"
        },
        "$page.variables.accountsETag": {
          "source": "[[ $chain.results.saveAccounts.headers.get('ETag') ]]"
        }
      },
      "outcomes": {
        "success": "fireSuccessNotification"
      }
    },
    "fireSuccessNotification": {
      "module": "vb/action/builtin/fireNotificationEventAction",
      "parameters": {
        "summary": "accounts saved",
        "message": "accounts record successfully updated",
        "type": "confirmation",
        "displayMode": "transient"
      },
      "outcomes": {
        "success": "callGoBackChain"
      }
    },
    "callGoBackChain": {
      "module": "vb/action/builtin/callChainAction",
      "parameters": {
        "id": "goBackChain"
      },
      "outcomes": {
        "success": "markSaveEnded"
      }
    },
    "assignFailureResult": {
      "module": "vb/action/builtin/assignVariablesAction",
      "parameters": {
        "$variables.saveFailureResult": {
          "source": "[[ $chain.results.saveAccounts ]]"
        }
      },
      "outcomes": {
        "success": "handleDefaultErrorMessage"
      }
    },
    "handleDefaultErrorMessage": {
      "module": "vb/action/builtin/assignVariablesAction",
      "outcomes": {
        "success": "fireErrorNotification"
      },
      "parameters": {
        "$variables.errorMessage": {
          "source": "[[ 'Could not update accounts: status ' + $chain.results.saveAccounts.status ]]"
        }
      }
    },
    "fireErrorNotification": {
      "module": "vb/action/builtin/fireNotificationEventAction",
      "parameters": {
        "summary": "Save failed",
        "message": "[[ $variables.errorMessage ]]",
        "type": "error",
        "displayMode": "persist"
      },
      "outcomes": {
        "success": "markSaveEnded"
      }
    },
    "markSaveEnded": {
      "module": "vb/action/builtin/assignVariablesAction",
      "parameters": {
        "$page.variables.saveAccountsChainInProgress": {
          "source": false
        }
      },
      "description": "Sets the progress variable to false",
      "label": "Mark Save done"
    }
  }
}